# Development Dockerfile for Portfolio Website
FROM node:18-alpine

# Install dependencies for better development experience
RUN apk add --no-cache libc6-compat git

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Expose port 3000
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]

